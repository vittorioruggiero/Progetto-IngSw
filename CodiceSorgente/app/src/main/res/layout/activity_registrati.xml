<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DEFAULT_COLOR"
    tools:context=".RegistratiActivity">

    <!-- Email Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="249dp"
        android:layout_height="61dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="32dp"
        app:boxStrokeColor="@color/GREEN_LOGO"
        app:hintTextColor="@color/GREEN_LOGO"
        app:layout_constraintBottom_toTopOf="@+id/nomeUtenteLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/green_cursor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Conferma Password Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confermaPasswordLayout"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="60dp"
        app:boxStrokeColor="@color/GREEN_LOGO"
        app:hintTextColor="@color/GREEN_LOGO"
        app:layout_constraintBottom_toTopOf="@+id/registratiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confermaPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/confermaPasswordHint"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/green_cursor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="32dp"
        app:boxStrokeColor="@color/GREEN_LOGO"
        app:hintTextColor="@color/GREEN_LOGO"
        app:layout_constraintBottom_toTopOf="@+id/confermaPasswordLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/passwordHint"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/green_cursor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nome Utente Edit Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nomeUtenteLayout"
        android:layout_width="249dp"
        android:layout_height="61dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="32dp"
        app:boxStrokeColor="@color/GREEN_LOGO"
        app:hintTextColor="@color/GREEN_LOGO"
        app:layout_constraintBottom_toTopOf="@+id/passwordLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nomeUtenteEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/nomeUtenteHint"
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/green_cursor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Registrati Button -->
    <Button
        android:id="@+id/registratiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="123dp"
        android:backgroundTint="@color/YELLOW_LOGO"
        android:text="@string/registratiButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/confermaPasswordLayout"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/confermaPasswordLayout" />

    <!-- Campi Non Compilati Text View -->
    <TextView
        android:id="@+id/campiNonCompilatiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/campiNonCompilati"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/emailLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo App -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="-36dp"
        android:layout_marginEnd="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>